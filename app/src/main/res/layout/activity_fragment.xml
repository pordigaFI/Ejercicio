<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    tools:context=".fragments.FragmentActivity">

    <TextView
        android:id="@+id/tvTitle2"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/example_of_fragments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Next fragment"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_containerView"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.porfirio.ejercicio.fragments.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_containerView2"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.porfirio.ejercicio.fragments.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>

