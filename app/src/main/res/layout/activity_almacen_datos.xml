<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tarea.AlmacenDatosActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTop2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glPercent2"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvNameIn"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/glStart2"
        app:layout_constraintTop_toTopOf="@+id/glTop2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvLastnameIn"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/glStart2"
        app:layout_constraintTop_toBottomOf="@+id/tvNameIn"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSexIn"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/glStart2"
        app:layout_constraintTop_toBottomOf="@+id/tvLastnameIn"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvEmailIn"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/glStart2"
        app:layout_constraintTop_toBottomOf="@+id/tvSexIn"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvPassIn"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/glStart2"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailIn"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btRegresar"
        android:text="Regresar"
        android:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintTop_toTopOf="@+id/glPercent2"
        app:layout_constraintStart_toStartOf="@+id/glStart2"
        android:layout_marginHorizontal="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>