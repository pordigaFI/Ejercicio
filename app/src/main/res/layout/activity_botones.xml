<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compGraficos.BotonesActivity">

    <TextView
        android:id="@+id/tvControles"
        android:text="Controles varios"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTexto2"
        app:layout_constraintTop_toBottomOf="@+id/tvControles"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_blue_light"
        android:text="Había una vez un superhéroe increible, mejor conocido como Batman."
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivBatman"
        android:src="@mipmap/batman"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etHistoria"
        android:hint="¿Héroe favorito?"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/ivBatman"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTexto5"
        app:layout_constraintTop_toBottomOf="@+id/etHistoria"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"
        android:background="@android:color/background_dark"
        android:text="Haz click -->"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/ibUrl"
        android:background="@android:color/black"
        android:src="@mipmap/superheroes"
        app:layout_constraintTop_toTopOf="@+id/ivBatman"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="230dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTexto3"
        app:layout_constraintTop_toBottomOf="@+id/etHistoria"
        android:layout_marginTop="60dp"
        android:background="@android:color/holo_green_light"
        android:text="Para tí, ¿Quien es mas popular?"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/rgRadio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rbRadio2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbRadio2"
            android:text="Batman"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbRadio3"
            android:text="Superman"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <TextView
        android:id="@+id/tvTexto4"
        app:layout_constraintTop_toBottomOf="@+id/rgRadio1"
        android:layout_marginTop="15dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Para tí, ¿Quienes son enemigos de Batman?"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cbCaja1"
        app:layout_constraintTop_toBottomOf="@+id/tvTexto4"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guasón"/>

    <CheckBox
        android:id="@+id/cbCaja2"
        app:layout_constraintTop_toBottomOf="@+id/tvTexto4"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/cbCaja1"
        android:layout_marginStart="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El santo"/>

    <CheckBox
        android:id="@+id/cbCaja3"
        app:layout_constraintTop_toBottomOf="@+id/tvTexto4"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/cbCaja2"
        android:layout_marginStart="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinguino"/>

    <CheckBox
        android:id="@+id/cbCaja4"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tvTexto4"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/cbCaja3"
        android:layout_marginStart="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cavernicola"/>

    <Button
        android:id="@+id/btNext5"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="250dp"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spLista"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>