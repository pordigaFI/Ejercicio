<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".compGraficos.RelativeActivity">

    <TextView
        android:id="@+id/tvActividad"
        android:text="RelativeLayout"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etNombre"
        android:hint="Nombre"
        android:layout_below="@id/tvActividad"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_width="325dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etApellido"
        android:hint="Apellidos"
        android:layout_below="@+id/etNombre"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_width="325dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etAntiguedad"
        android:hint="Antiguedad en el puesto (aÃ±os)"
        android:layout_below="@+id/etApellido"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_width="325dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivFoto"
        app:srcCompat="@mipmap/persona1"
        android:layout_below="@+id/etAntiguedad"
        android:layout_marginTop="60dp"
        android:layout_marginStart="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btNext3"
        android:text="Next"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_below="@+id/ivFoto"
        android:layout_marginTop="60dp"
        android:layout_marginStart="170dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>